<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/container_card_view"
        android:layout_width="@dimen/width_0"
        android:layout_height="@dimen/height_200"
        android:layout_marginStart="@dimen/margin_padding_10"
        android:layout_marginEnd="@dimen/margin_padding_10"
        app:cardCornerRadius="@dimen/corner_radius_10"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_gradient_navegation">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/width_303"
                android:layout_height="@dimen/height_140"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_pokemon_logo"
                app:tint="@color/blue_secondary" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/placeholderTextLayout"
                android:layout_width="@dimen/corner_radius_100"
                android:layout_height="@dimen/corner_radius_100"
                android:layout_marginStart="@dimen/margin_padding_20"
                android:layout_marginTop="@dimen/margin_padding_20"
                android:layout_marginBottom="@dimen/margin_padding_20"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/profilePlaceholderImageView"
                    android:layout_width="@dimen/width_0"
                    android:layout_height="@dimen/height_0"
                    android:src="@drawable/bg_profile_green"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/placeholderTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:textAllCaps="true"
                    android:textAppearance="@style/boldExtraBold40Text"
                    android:textSize="@dimen/size_font_40"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/post_image_view"
                android:layout_width="@dimen/corner_radius_100"
                android:layout_height="@dimen/corner_radius_100"
                android:layout_marginStart="@dimen/margin_padding_20"
                android:layout_marginTop="@dimen/margin_padding_20"
                android:layout_marginBottom="@dimen/margin_padding_20"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_avatar_insect" />

            <TextView
                android:id="@+id/title_text_view"
                android:layout_width="@dimen/width_0"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_padding_10"
                android:layout_marginTop="@dimen/margin_padding_20"
                android:layout_marginEnd="@dimen/margin_padding_10"
                android:textAppearance="@style/semiBold16Text"
                android:textColor="@color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/post_image_view"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/selectContainer"
                android:layout_width="@dimen/width_0"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/title_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.constraintlayout.widget.ConstraintLayout>

            <ImageView
                android:id="@+id/favoriteImageView"
                android:layout_width="@dimen/width_50"
                android:layout_height="@dimen/height_50"
                android:layout_marginEnd="@dimen/margin_padding_20"
                android:layout_marginBottom="@dimen/margin_padding_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/ic_heart" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
